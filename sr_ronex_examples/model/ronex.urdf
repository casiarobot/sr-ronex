<?xml version="1.0"?>
<robot name="flexible">
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.6" radius="0.2"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 .8 1"/>
      </material>
    </visual>
  </link>

  <link name="head">
    <visual>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>

  <joint name="head_swivel" type="continuous">
    <parent link="base_link"/>
    <child link="head"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 0.3"/>
  </joint>

  <transmission type="sr_ronex_transmissions/RonexTransmission" name="my_ronex_transmission">
    <joint name="head_swivel"/>
    <mapping ronex="/ronex/general_io/0" property="position" analogue_pin="6" scale="0.001" offset="0.0"/>
    <mapping ronex="/ronex/general_io/0" property="effort"   analogue_pin="7" scale="2.0" offset="1.0"/>
    <mapping ronex="/ronex/general_io/0" property="command" pwm_module="1" pwm_pin="0" direction_pin="0"/>
  </transmission>
</robot>
